generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int               @id @default(autoincrement())
  email              String            @unique
  firstname          String?
  lastname           String?
  password           String?
  secret_pii         secret_pii[]
  basic_pii          basic_pii[]
  TransactionParty   TransactionParty? @relation(fields: [transactionPartyId], references: [id])
  transactionPartyId Int?
}

model TransactionParty {
  id    Int    @id @default(autoincrement())
  name  String
  email String
  users User[]
}

model ersonal_id {
  id      Int @id @default(autoincrement())
  user_id Int
}

model basic_pii {
  user_id   Int     @id
  user      User    @relation(fields: [user_id], references: [id])
  firstname String?
  lastname  String?
  email     String?
}

model secret_pii {
  user_id Int     @id
  user    User    @relation(fields: [user_id], references: [id])
  ssn     String?
  address String?
}
